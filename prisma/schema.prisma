// Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String   @id @default(cuid())
  email                String   @unique
  name                 String
  password             String
  role                 String   @default("USER")
  isActive             Boolean  @default(true)
  twoFactorEnabled     Boolean  @default(false)
  twoFactorSecret      String?
  twoFactorBackupCodes String?  // JSON string of backup codes
  trustedDevices       String?  // JSON string of trusted devices
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  coffreMembers CoffreMember[]
  movements      Movement[]
  inventories    Inventory[]
  assets         Asset[]
  passwordFiles  PasswordFile[]
  reserves       Reserve[]

  @@map("users")
}

model Coffre {
  id          String   @id @default(cuid())
  name        String
  description String?
  balance     Float    @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     CoffreMember[]
  movements   Movement[]
  inventories Inventory[]
  assets      Asset[]

  @@map("coffres")
}

model CoffreMember {
  id       String @id @default(cuid())
  coffreId String
  userId   String
  role     String @default("MEMBER")

  coffre Coffre @relation(fields: [coffreId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([coffreId, userId])
  @@map("coffre_members")
}

model Movement {
  id          String    @id @default(cuid())
  coffreId    String
  userId      String
  type        String    // "ENTRY" | "EXIT"
  amount      Float
  description String?
  createdAt   DateTime  @default(now())
  deletedAt   DateTime?

  coffre  Coffre         @relation(fields: [coffreId], references: [id], onDelete: Cascade)
  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  details MovementDetail[]

  @@index([coffreId, createdAt])
  @@index([coffreId, deletedAt])
  @@index([userId, createdAt])
  @@map("movements")
}

model MovementDetail {
  id           String @id @default(cuid())
  movementId   String
  denomination Float
  quantity     Int

  movement Movement @relation(fields: [movementId], references: [id], onDelete: Cascade)

  @@map("movement_details")
}

model Inventory {
  id          String    @id @default(cuid())
  coffreId    String
  userId      String
  totalAmount Float
  notes       String?
  date        DateTime  @default(now())
  deletedAt   DateTime?

  coffre  Coffre          @relation(fields: [coffreId], references: [id], onDelete: Cascade)
  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  details InventoryDetail[]

  @@index([coffreId, date])
  @@index([coffreId, deletedAt])
  @@map("inventories")
}

model InventoryDetail {
  id           String @id @default(cuid())
  inventoryId  String
  denomination Float
  quantity     Int

  inventory Inventory @relation(fields: [inventoryId], references: [id], onDelete: Cascade)

  @@map("inventory_details")
}

model Asset {
  id          String   @id @default(cuid())
  name        String
  category    String?
  description String?
  coffreId    String?
  userId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  coffre   Coffre?        @relation(fields: [coffreId], references: [id])
  user     User?          @relation(fields: [userId], references: [id])
  events   AssetEvent[]
  documents AssetDocument[]

  @@map("assets")
}

model AssetEvent {
  id       String   @id @default(cuid())
  assetId  String
  type     String   // "PURCHASE" | "SALE" | "VALUATION"
  amount   Float?
  date     DateTime
  notes    String?

  asset Asset @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@map("asset_events")
}

model AssetDocument {
  id            String   @id @default(cuid())
  assetId       String
  userId        String?
  filename      String
  mimeType      String
  sizeBytes     Int
  sha256        String?
  data          Bytes?
  documentType  String?
  notes         String?
  createdAt     DateTime @default(now())

  asset Asset @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@map("asset_documents")
}

model PasswordFile {
  id        String   @id @default(cuid())
  userId    String
  filename  String
  mimeType  String
  sizeBytes Int
  sha256    String?
  data      Bytes
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_files")
}

model Reserve {
  id          String   @id @default(cuid())
  userId      String
  year        Int
  month       Int
  amount      Float
  releaseYear Int?     // Année de libération (calculée)
  released    Float    @default(0) // Montant libéré
  notes       String?  // Notes optionnelles
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, year, month])
  @@map("reserves")
}

model Log {
  id          String   @id @default(cuid())
  userId      String?
  coffreId    String?
  movementId  String?
  action      String
  description String?
  metadata    String?  // JSON string for additional data
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@map("logs")
}